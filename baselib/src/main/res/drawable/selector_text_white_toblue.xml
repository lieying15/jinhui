<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--选中时的字体颜色  -->
    <item android:state_selected="true" android:color="@color/blue"/>
    <!-- 非触摸模式下获得焦点并单击时的字体颜色 -->
    <item android:state_pressed="true" android:color="@color/blue"/>
    <item android:color="@color/blue" android:state_checked="true"/>
    <item android:color="@color/white" android:state_checked="false"/>
    <!-- 没有焦点时字体颜色 -->
    <item android:state_selected="false" android:color="@color/white"/>
</selector>