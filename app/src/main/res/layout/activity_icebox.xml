<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows = "true"
    android:background="@color/app_mainback">


    <android.support.v4.view.ViewPager
        android:id="@+id/icebox_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/icon_icebox_bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y140"
        android:orientation="horizontal"
        android:background="@drawable/shap_radius_white"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginBottom="@dimen/y10">
        <LinearLayout
            android:id="@+id/icon_icebox_temperature_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon_icebox_temperature_iv"
                android:layout_width="@dimen/x70"
                android:layout_height="@dimen/y70"
                android:layout_marginTop="@dimen/y20"
                android:background="@drawable/icon_icebox_temperature"/>
            <TextView
                android:id="@+id/icon_icebox_temperature_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/y28"
                android:text="冰箱温度设置"
                android:gravity="center_vertical"
                android:textColor="@color/text_nomal"/>
        </LinearLayout>
        <View
            android:layout_width="@dimen/x2"
            android:layout_height="match_parent"
            android:background="@color/app_mainback"/>
        <LinearLayout
            android:id="@+id/icon_icebox_screen_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon_icebox_screen_iv"
                android:layout_width="@dimen/x70"
                android:layout_height="@dimen/y70"
                android:layout_marginTop="@dimen/y20"
                android:src="@drawable/icon_icebox_screen"/>
            <TextView
                android:id="@+id/icon_icebox_screen_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/y28"
                android:text="冰箱屏保设置"
                android:gravity="center_vertical"
                android:textColor="@color/text_nomal"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>