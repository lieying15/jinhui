<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popupwindow_select_goods"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/pop_back_left">
    <!--android:background="@drawable/pop_back_left"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pop_seletgoods_composite_sort_ll"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:background="@drawable/selector_null_to_theme">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="综合排序"
            android:textSize="@dimen/text_size_small_xx"
            android:gravity="center"
            android:textColor="@color/white" />
    </LinearLayout>
    <View style="@style/divide_line_horizontal_match_white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pop_seletgoods_hightolow_ll"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@drawable/selector_null_to_theme">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="从高到低"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small_xx"/>
    </LinearLayout>

    <View style="@style/divide_line_horizontal_match_white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pop_seletgoods_lowtohigh_ll"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@drawable/selector_null_to_theme">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="从低到高"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small_xx"/>
    </LinearLayout>
    <View style="@style/divide_line_horizontal_match_white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pop_seletgoods_credit_ll"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/selector_null_to_theme">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="信用排序"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small_xx"/>
    </LinearLayout>
</LinearLayout>
