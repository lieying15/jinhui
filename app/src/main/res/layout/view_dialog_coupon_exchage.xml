<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x600"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/shap_radius_white_r50"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_base_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y80"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="@dimen/y28"
        android:textColor="@color/wine_light"
        android:text="换购成功" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/app_mainback"/>
    <TextView
        android:id="@+id/dialog_base_subtitle_tv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="5dp"
        android:textColor="@color/text_nomal"
        android:textSize="@dimen/text_size_small_xx"
        android:text="@string/exchage_success_content" />



    <TextView
        android:id="@+id/dialog_buy_record"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginBottom="@dimen/y20"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:background="@drawable/selector_stoke_mainback_r50"
        android:text="查看购买记录"
        android:gravity="center"
        android:textSize="@dimen/text_size_small_x"
        android:textColor="@color/wine_light" />
    <TextView
        android:id="@+id/dialog_exchange_ice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginBottom="@dimen/y20"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:background="@drawable/selector_stoke_mainback_r50"
        android:text="继续兑换冰箱"
        android:gravity="center"
        android:textSize="@dimen/text_size_small_x"
        android:textColor="@color/wine_light" />

</LinearLayout>