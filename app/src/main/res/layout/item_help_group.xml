<?xml version="1.0" encoding="utf-8"?>
<!-- 消客的列表 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y90"
    android:layout_marginLeft="@dimen/x10"
    android:layout_marginRight="@dimen/x10"
    android:gravity="bottom"
    >
    <LinearLayout
        android:id="@+id/help_title_ll"
        android:layout_marginTop="@dimen/y10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:background="@drawable/shap_radius_white">
        <ImageView
            android:id="@+id/help_title_iv"
            android:layout_width="@dimen/icon_pxsize_x"
            android:layout_height="@dimen/icon_pxsize_y"
            android:src="@drawable/icon_help" />
        <TextView
            android:id="@+id/help_title_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y80"
            android:gravity="center_vertical"
            android:text="恭喜您，所购买的货品已送达"
            android:textColor="@color/text_nomal"
            android:layout_marginLeft="@dimen/x20"
            android:textSize="@dimen/y28"/>

        <ImageView
            android:id="@+id/help_title_arrow_iv"
            android:layout_width="@dimen/icon_pxsize_x"
            android:layout_height="@dimen/icon_pxsize_y"
            android:src="@drawable/icon_arrow_down_gray"/>
    </LinearLayout>


</LinearLayout>