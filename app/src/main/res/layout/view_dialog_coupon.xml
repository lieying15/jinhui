<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x600"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shap_radius_white_r50"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_base_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y80"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="@dimen/y28"
        android:textColor="@color/wine_light"
        android:text="充值成功" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/app_mainback"/>
    <TextView
        android:id="@+id/dialog_base_subtitle_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/text_nomal"
        android:textSize="@dimen/text_size_small_xx"
        android:text="恭喜您获得冰箱兑换券一张" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_radius_white_stroke_mainback_r20"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialog_coupon_iv"
                android:layout_width="@dimen/image_normal_size"
                android:layout_height="@dimen/image_normal_size"
                android:layout_marginLeft="@dimen/x10"
                android:src="@drawable/img_fridge"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dialog_coupon_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_nomal"
                    android:textSize="@dimen/text_size_small_xx"
                    android:text="冰箱兑换券"
                    android:layout_toRightOf="@+id/dialog_coupon_iv"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"/>
                <TextView

                    android:id="@+id/dialog_coupon_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_nomal"
                    android:textSize="@dimen/text_size_small_xx"
                    android:text="兑换截止日期：2017.2.12"
                    android:layout_below="@+id/dialog_coupon_title_tv"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentStart="true" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/dialog_base_top_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:background="@drawable/selector_stoke_mainback_r50"
        android:text="返回"
        android:gravity="center"
        android:layout_marginTop="@dimen/y30"
        android:textColor="@drawable/selector_color_text_normal_theme"
        android:textSize="@dimen/text_size_small_x" />
    <TextView
        android:id="@+id/dialog_base_bottom_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginBottom="@dimen/y20"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:background="@drawable/selector_stoke_mainback_r50"
        android:text="立即兑换"
        android:gravity="center"
        android:textSize="@dimen/text_size_small_x"
        android:textColor="@color/wine_light" />

</LinearLayout>