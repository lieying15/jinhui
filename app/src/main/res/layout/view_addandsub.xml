<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shopcart_addandsub_ll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">
        <FrameLayout
            android:id="@+id/shopcart_suit_sub_fl"
            android:layout_width="@dimen/comfort_press_medium_size"
            android:layout_height="@dimen/comfort_press_medium_size">
            <ImageView
                android:layout_width="@dimen/icon_pxsize_x"
                android:layout_height="@dimen/icon_pxsize_y"
                android:background="@drawable/selector_icon_sub_wine"
                android:layout_gravity="center"/>
        </FrameLayout>

        <TextView
            android:id="@+id/shopcart_suit_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textColor="@color/app_theme"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="1"/>

        <FrameLayout
            android:id="@+id/shopcart_suit_add_fl"
            android:layout_width="@dimen/comfort_press_medium_size"
            android:layout_height="@dimen/comfort_press_medium_size">
            <ImageView
                android:layout_width="@dimen/icon_pxsize_x"
                android:layout_height="@dimen/icon_pxsize_y"
                android:background="@drawable/selector_icon_add_wine"
                android:layout_gravity="center"/>
        </FrameLayout>
</LinearLayout>