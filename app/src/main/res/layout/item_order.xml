<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_item_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shap_radius_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20">

        <TextView
            android:id="@+id/order_item_storename_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="供应商"
            android:textColor="@color/text_nomal"
            android:textSize="@dimen/y28" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="5dp"
            android:text="状态:"
            android:textColor="@color/text_tips"
            android:textSize="@dimen/y28" />

        <TextView
            android:id="@+id/order_item_states_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="已完成"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/y28" />
    </LinearLayout>

    <View style="@style/divide_line_horizontal_match_mianback" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y180"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/y10"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:paddingTop="@dimen/y10">

        <com.thlh.viewlib.easyrecyclerview.widget.EasyRecyclerView
            android:id="@+id/order_item_rv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:focusable="false" />
    </LinearLayout>

    <View style="@style/divide_line_horizontal_match_mianback" />
    <!-- 总额-->
    <LinearLayout
        android:id="@+id/order_goods_final_price_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20">

        <TextView
            android:id="@+id/order_goods_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/order_goods_describe_tv"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="共 2 件商品"
            android:textColor="@color/text_tips"
            android:textSize="@dimen/text_size_small_xx" />

        <TextView
            android:id="@+id/order_goods_price_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/order_all_margin_top"
            android:text="实付款:"
            android:textColor="@color/text_tips"
            android:textSize="@dimen/text_size_small_xx" />

        <TextView
            android:id="@+id/order_goods_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/order_all_margin_top"
            android:text=""
            android:textColor="@color/app_theme"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/order_goods_mjz_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:background="@drawable/shap_radius_yellow_stroke_theme_r20"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:text=""
            android:textColor="@color/yellowdark"
            android:textSize="@dimen/y22" />

    </LinearLayout>

    <View style="@style/divide_line_horizontal_match_mianback" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:gravity="center_vertical|right"
        android:paddingRight="@dimen/x20">

        <TextView
            android:id="@+id/order_goods_nextaction_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/selector_radius_white_stoke_mainblack_r20"
            android:gravity="center"
            android:minWidth="@dimen/x160"
            android:paddingBottom="@dimen/y5"
            android:paddingTop="@dimen/y5"
            android:text="评价"
            android:textColor="@color/text_nomal"
            android:textSize="@dimen/y28"
            android:visibility="visible" />

        <TextView
            android:id="@+id/order_goods_nextaction_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_radius_white_stoke_theme_apptheme_r20"
            android:gravity="center"
            android:minWidth="@dimen/x160"
            android:paddingBottom="@dimen/y5"
            android:paddingTop="@dimen/y5"
            android:text=""
            android:textColor="@color/app_theme"
            android:textSize="@dimen/y28" />
    </LinearLayout>
</LinearLayout>