<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coupon_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    card_view:cardBackgroundColor="@color/pink_shallow"
    card_view:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="15dp">
        <TextView
            android:id="@+id/dialog_coupon_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"
            android:text="兑换券"
            android:maxEms="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"/>
        <View
            android:layout_toRightOf="@+id/dialog_coupon_type_tv"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:minHeight="92dp"
            android:layout_centerVertical="true"
            android:background="@color/white" />
        <ImageView
            android:id="@+id/dialog_coupon_iv"
            android:layout_toRightOf="@+id/dialog_coupon_type_tv"
            android:layout_width="@dimen/item_img_width"
            android:layout_height="@dimen/item_img_height"
            android:src="@drawable/img_fridge"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dialog_coupon_iv"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/dialog_coupon_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small_xx"
                android:text="冰箱兑换券"
                android:layout_marginLeft="10dp"/>
          <!--  <TextView
                android:id="@+id/dialog_coupon_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small_xx"
                android:text="有效期至：2017.2.12"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"/>-->

        </LinearLayout>

        <TextView
            android:id="@+id/dialog_coupon_action_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small_xx"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="立即兑换"
            android:maxEms="2"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>


