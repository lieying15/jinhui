<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shap_radius_white"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical">
        <View
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="促销"
            android:textColor="@color/text_nomal"
            android:textSize="@dimen/text_size_small_xx"
            android:gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/dialog_promotion_cancel_iv"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/icon_mistake_black"/>
    </LinearLayout>
    <View style="@style/divide_line_horizontal_match_mianback"/>
    <LinearLayout
        android:id="@+id/dialog_promotion_suit_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="80dp"
            android:textColor="@color/app_theme"
            android:textSize="@dimen/text_size_small_xx"
            android:gravity="center"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shap_radius_yellow_stroke_theme_r20"
            android:text="优惠套装"/>

        <TextView
            android:id="@+id/dialog_promotion_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_nomal"
            android:textSize="@dimen/text_size_little"
            android:gravity="center"
            android:text="最高节省 元"/>
        <TextView
            android:id="@+id/dialog_promotion_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/text_nomal"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/text_size_little"
            android:gravity="center"
            android:text="共 款"/>
    </LinearLayout>


</LinearLayout>