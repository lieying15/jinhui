<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows = "true">

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.thlh.viewlib.tablayout.CommonTabLayout
        android:id="@+id/guide_tablayout"
        android:layout_width="100dp"
        android:layout_height="40dp"
        tl:tl_indicator_anim_enable="true"
        tl:tl_indicator_color="@color/white"
        tl:tl_divider_color="@color/white"
        tl:tl_divider_width="1dp"
        tl:tl_divider_padding="0dp"
        tl:tl_textSelectColor="@color/white"
        tl:tl_textUnselectColor="@color/white"
        tl:tl_indicator_corner_radius="0dp"
        tl:tl_indicator_style="BLOCK"
        tl:tl_iconGravity="RIGHT"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"/>






</RelativeLayout>

