<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows = "true"
    android:orientation="vertical"
    android:background="@color/white">

    <com.thlh.jhmjmw.view.HeaderNormal
        android:id="@+id/nickname_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:title="修改昵称"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/nickname_et"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:minHeight="40dp"
            android:textColor="@color/text_nomal"
            android:textSize="@dimen/text_size_small_x"
            android:singleLine="true"
            android:hint="请输入昵称"
            android:textColorHint="@color/text_tips"
            android:background="@drawable/bg_null"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/nickname_cancel_iv"
            android:layout_width="@dimen/icon_size_large"
            android:layout_height="@dimen/icon_size_large"
            android:background="@drawable/icon_mistake_black"/>
    </LinearLayout>
    <View style="@style/divide_line_horizontal_match_mianback"/>
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/nickname_snack_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"/>
</LinearLayout>
