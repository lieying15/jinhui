<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popupwindow_business_more"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/pop_back">
    <LinearLayout
        android:id="@+id/goods_pop_info_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_null_to_theme"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:text="消息"
            android:textSize="@dimen/text_size_little"
            android:textColor="@color/white" />
        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/icon_info_white"/>
    </LinearLayout>

    <View style="@style/divide_line_horizontal_match_white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/goods_pop_homepage_ll"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/selector_null_to_theme">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:text="首页"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_little"/>

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/icon_home_white"/>
    </LinearLayout>
    <View style="@style/divide_line_horizontal_match_white"/>

    <LinearLayout
        android:id="@+id/goods_pop_search_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/selector_null_to_theme"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_little"/>
        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/icon_search_white"/>
    </LinearLayout>

    <View style="@style/divide_line_horizontal_match_white"/>

    <LinearLayout
        android:id="@+id/goods_pop_aboutus_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_null_to_theme"
        android:gravity="center"
        android:padding="2dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:text="关于我们"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_little"/>
    </LinearLayout>
</LinearLayout>
