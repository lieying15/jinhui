<?xml version="1.0" encoding="utf-8"?>
<!-- 消客的列表 -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homepage_todaygoods_toprl"
    android:layout_width="@dimen/x750"
    android:layout_height="@dimen/y240"
    android:paddingTop="@dimen/y1"
    android:visibility="invisible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        android:paddingBottom="@dimen/y10"
        android:background="@color/white">
        <ImageView
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y83"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/homepag_goodstag_today"/>
        <ImageView
            android:id="@+id/homgpage_todaygoods_iv"
            android:layout_width="@dimen/x220"
            android:layout_height="@dimen/y220"
            android:scaleType="fitCenter"
            android:layout_marginLeft="@dimen/x70"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/y10"
            />

        <ImageView
            android:id="@+id/homgpage_todaygoods_cart_iv"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/homgpage_todaygoods_iv"
            android:scaleType="fitXY"
            android:src="@drawable/icon_homepage_cart"/>
        <!--android:layout_marginTop="@dimen/y25"-->
        <TextView
            android:id="@+id/homgpage_todaygoods_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/y56"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="@dimen/x15"
            android:layout_toRightOf="@+id/homgpage_todaygoods_iv"
            android:maxLines="2"
            android:ellipsize="end"
            android:text=""
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_black"
            android:textSize="@dimen/y28" />
        <FrameLayout
            android:id="@+id/homgpage_todaygoods_describe_fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:visibility="gone"
            android:layout_below="@+id/homgpage_todaygoods_name_tv"
            android:layout_toRightOf="@+id/homgpage_todaygoods_iv">
            <TextView
                android:id="@+id/homgpage_todaygoods_describe_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y15"
                android:maxLines="1"
                android:ellipsize="end"
                android:text=""
                android:background="@drawable/shap_radius_lightblue"
                android:textColor="@color/text_tips"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                android:textSize="@dimen/y23" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/y15"
            android:layout_marginLeft="@dimen/x15"
            android:layout_toRightOf="@+id/homgpage_todaygoods_iv"
            android:layout_below="@+id/homgpage_todaygoods_describe_fl">
            <TextView
                android:id="@+id/homgpage_todaygoods_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:singleLine="true"
                android:textColor="@color/app_theme"
                android:textSize="@dimen/y28" />
            <TextView
                android:id="@+id/homgpage_todaygoods_mjz_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:text=""
                android:textColor="@color/app_theme"
                android:textSize="@dimen/y22"
                android:paddingLeft="@dimen/x5"
                android:paddingRight="@dimen/x5"
                android:singleLine="true"
                android:background="@drawable/shap_radius_white_stroke_theme_r20"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>