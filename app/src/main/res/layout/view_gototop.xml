<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/gototop_single"
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/y60"
        android:src="@drawable/icon_goto_top"/>
    <ImageView
        android:id="@+id/gototop_double_top"
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/y60"
        android:src="@drawable/icon_goto_top_lefthalf"/>
    <ImageView
        android:id="@+id/gototop_double_back"
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/y60"
        android:src="@drawable/icon_goto_top_righthalf"/>
</LinearLayout>