<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/app_mainback">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/x600"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_framentdialog_radius_white"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/y200"
        android:orientation="vertical">
            <!--标题-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y80">
                <ImageView
                    android:id="@+id/exchange_card_title_iv"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/y60"
                    android:src="@drawable/icon_gift"/>

                <TextView
                    android:id="@+id/exchange_card_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/y25"
                    android:textColor="@color/pink"
                    android:text="验证吗"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/exchange_card_cancel_iv"
                    android:layout_width="@dimen/x60"
                    android:layout_height="@dimen/y60"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icon_dialog_cancel"
                    android:layout_marginRight="@dimen/x30"
                    android:visibility="gone"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y2"
                android:background="@color/app_mainback"
                android:layout_marginTop="@dimen/y10"
                android:layout_marginBottom="@dimen/y10"/>

            <TextView
                android:id="@+id/exchange_card_content_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="@dimen/y50"
                android:text="请输入实体卡密码"
                android:textSize="@dimen/y30"
                android:paddingLeft="@dimen/x50"
                android:paddingRight="@dimen/x50"
                android:lineSpacingMultiplier="1.2"
                android:gravity="center"
                android:textColor="@color/text_nomal"
                android:paddingTop="@dimen/y20"
                android:paddingBottom="@dimen/y20"/>

            <EditText
                android:id="@+id/exchange_card_password_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:layout_marginLeft="@dimen/x25"
                android:layout_marginRight="@dimen/x25"
                android:orientation="horizontal"
                android:background="@drawable/selector_stoke_mainback_r50"
                android:layout_marginBottom="@dimen/y20"
                android:paddingLeft="@dimen/x50"
                android:paddingRight="@dimen/x50"
                android:hint="请输入密码，注意区分大小写"
                android:textColorHint="@color/app_mainback_press"
                android:textColor="@color/black"
                android:textSize="@dimen/x25"/>

            <FrameLayout
                android:id="@+id/exchange_card_nextaction_fl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y100"
                android:layout_marginLeft="@dimen/x25"
                android:layout_marginRight="@dimen/x25"
                android:orientation="horizontal"
                android:background="@drawable/selector_stoke_mainback_r50"
                android:layout_marginBottom="@dimen/y20"
                android:paddingLeft="@dimen/x50"
                android:paddingRight="@dimen/x50">
                <TextView
                    android:id="@+id/exchange_card_nextaction_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="立即兑换"
                    android:textSize="@dimen/y25"
                    android:gravity="center"
                    android:textColor="@color/wine_light" />
            </FrameLayout>
        </LinearLayout>
</LinearLayout>