<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y360">


    <com.pili.pldroid.player.widget.PLVideoView
        android:id="@+id/video_plview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y360" />
    <!--加载遮罩-->
    <FrameLayout
        android:id="@+id/video_loading_cover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y360">

        <com.thlh.viewlib.progress.CircleProgressBar
            android:id="@+id/vedio_circleprogressbar"
            app:mlpb_progress_stoke_width="2dp"
            app:mlpb_background_color="@color/transparent"
            app:mlpb_progress_color="@color/app_theme"
            app:mlpb_progress_text_visibility="visible"
            app:mlpb_progress_text_size="@dimen/text_size_small_xx"
            app:mlpb_progress_text_color="@color/white"
            app:mlpb_inner_radius="20dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"/>
    </FrameLayout>


</RelativeLayout>