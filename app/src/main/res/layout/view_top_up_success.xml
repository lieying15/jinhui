<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x600"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/shap_radius_white_r50"
    android:orientation="vertical">
    <!--android:layout_width="@dimen/x600"-->
    <TextView
        android:id="@+id/dialog_base_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y80"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="@dimen/y28"
        android:textColor="@color/wine_light"
        android:text="充值成功" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/app_mainback"/>
    <TextView
        android:id="@+id/dialog_base_subtitle_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/text_nomal"
        android:textSize="@dimen/text_size_small_xx"
        android:text="恭喜您获得水卡换购券、冰箱兑换券各一张" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_radius_white_stroke_mainback_r20"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/coupon_water_cord"
                android:layout_width="@dimen/image_normal_size"
                android:layout_height="@dimen/image_normal_size"
                android:src="@drawable/img_fridge"/>
            <View
                android:background="@color/app_mainback"
                android:layout_width="@dimen/y2"
                android:layout_height="@dimen/image_normal_size"/>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/dialog_coupon_title_tv_water_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/y28"
                    android:textColor="@color/wine_light"
                    android:text="水卡换购券"
                    android:layout_toRightOf="@+id/dialog_coupon_iv"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="254dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:textSize="@dimen/y20"
                    android:text="4099美家钻换购价值5000元水卡"
                    android:layout_weight="0.66" />
                <TextView
                    android:id="@+id/dialog_coupon_time_tv_water_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_nomal"
                    android:textSize="@dimen/y13"
                    android:layout_gravity="center_vertical"
                    android:text="2017.2.12"
                    android:layout_below="@+id/dialog_coupon_title_tv"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentStart="true" />

            </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/image_normal_size"
                    android:layout_height="@dimen/image_normal_size"
                    />

        </LinearLayout>
    </RelativeLayout>

<!----><!---->

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_radius_white_stroke_mainback_r20"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20">
        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <!--android:layout_marginLeft="@dimen/x10"-->
            <ImageView
                android:id="@+id/dialog_coupon_iv"
                android:layout_width="@dimen/image_normal_size"
                android:layout_height="@dimen/image_normal_size"
                android:src="@drawable/img_fridge"/>

           <View
               android:background="@color/app_mainback"
               android:layout_width="@dimen/y2"
               android:layout_height="@dimen/image_normal_size"/>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dialog_coupon_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/y28"
                    android:textColor="@color/wine_light"
                    android:text="冰箱兑换券"
                    android:layout_toRightOf="@+id/dialog_coupon_iv"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/dialog_coupon_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_nomal"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/y13"
                    android:text="2017.2.12"
                    android:layout_below="@+id/dialog_coupon_title_tv"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentStart="true" />
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/image_normal_size"
                android:layout_height="@dimen/image_normal_size"
                android:src="@drawable/img_ice"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/once_exchange"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_marginBottom="@dimen/y20"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:background="@drawable/selector_stoke_mainback_r50"
        android:text="立即换购"
        android:gravity="center"
        android:textSize="@dimen/text_size_small_x"
        android:textColor="@color/wine_light"

        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        />
    <!--  android:focusable="false"
       android:clickable="false"
       android:focusableInTouchMode="false"-->

</LinearLayout>