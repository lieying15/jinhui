<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y80">

    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="@dimen/y80"
    android:background="@color/white"
    android:gravity="center_vertical"
    app:layout_scrollFlags="scroll">
    <FrameLayout
        android:id="@+id/homeheader_scan_fl"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30">
        <ImageView
            android:layout_width="@dimen/icon_header_pxsize_x"
            android:layout_height="@dimen/icon_header_pxsize_y"
            android:layout_gravity="center"
            android:src="@drawable/icon_scan_gray"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/x42"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/x132"
            android:layout_height="@dimen/y32"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:src="@drawable/index_logo"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/homeheader_seach_ll"
        android:layout_width="@dimen/x80"
        android:layout_height="match_parent"
        android:background="@drawable/shap_radius_white"
        android:visibility="visible">
        <!--<ImageView-->
            <!--android:layout_width="@dimen/icon_header_pxsize_x"-->
            <!--android:layout_height="@dimen/icon_header_pxsize_y"-->
            <!--android:layout_margin="5dp"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:src="@drawable/icon_search_gray"/>-->
        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:paddingLeft="10dp"-->
            <!--android:text="输入商家或商品名称"-->
            <!--android:textSize="@dimen/text_size_little"-->
            <!--android:textColor="@color/text_tips"-->
            <!--android:gravity="center_vertical"/>-->
        <ImageView
            android:id="@+id/homeheader_seach_iv"
            android:layout_width="@dimen/icon_header_pxsize_x"
            android:layout_height="@dimen/icon_header_pxsize_y"
            android:layout_gravity="center"
            android:src="@drawable/icon_search_gray"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/homeheader_info_rl"
        android:layout_width="@dimen/x80"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/homeheader_info_iv"
            android:layout_width="@dimen/icon_header_pxsize_x"
            android:layout_height="@dimen/icon_header_pxsize_y"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_message_gray"/>
        <com.thlh.viewlib.tablayout.MsgView
            android:id="@+id/homeheader_info_tv"
            style="@style/text_shopcart"
            android:layout_toRightOf="@+id/homeheader_info_iv"
            android:text="0"
            android:layout_marginLeft="-2dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/white"
            mv:mv_backgroundColor="@color/white"
            mv:mv_isRadiusHalfHeight="true"
            android:visibility="invisible"/>
    </RelativeLayout>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/app_mainback"
        android:layout_gravity="bottom"/>
</FrameLayout>