<?xml version="1.0" encoding="utf-8"?>
<!-- 消客的列表 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_top_item_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"

    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">
    <ImageView
        android:id="@+id/category_top_item_iv"
        android:layout_width="@dimen/image_smallx_size"
        android:layout_height="@dimen/image_smallx_size" />
    <TextView
        android:id="@+id/category_top_item_tv"
        android:text="@string/category_name_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:textSize="@dimen/text_size_little"
        android:layout_marginTop="2dp" />

</LinearLayout>
