<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows = "true"
    android:orientation="vertical"
    android:background="@color/app_mainback">

    <com.thlh.viewlib.tablayout.CommonTabLayout
        android:id="@+id/comment_tablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:background="@drawable/shap_radius_white"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/y10"
        android:layout_marginBottom="@dimen/y10"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10"
        tl:tl_indicator_margin_left="0dp"
        tl:tl_indicator_margin_top="0dp"
        tl:tl_indicator_margin_right="0dp"
        tl:tl_indicator_margin_bottom="0dp"
        tl:tl_indicator_anim_enable="true"
        tl:tl_indicator_color="@color/white"
        tl:tl_divider_color="@color/white"
        tl:tl_divider_width="1dp"
        tl:tl_divider_padding="0dp"
        tl:tl_textSelectColor="@color/app_theme"
        tl:tl_textUnselectColor="@color/text_nomal"
        tl:tl_indicator_corner_radius="0dp"
        tl:tl_indicator_style="BLOCK" />

    <android.support.v4.view.ViewPager
        android:id="@+id/comment_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
