<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_confirm_addr_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shap_radius_white"
    android:layout_marginTop="@dimen/y10"
    android:paddingLeft="@dimen/x20"
    android:paddingRight="@dimen/x20">
<TextView
    android:id="@+id/order_address_name_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=""
    android:maxLength="10"
    android:maxLines="1"
    android:layout_marginTop="10dp"
    android:textColor="@color/text_nomal"
    android:textSize="@dimen/y28"/>
<TextView
    android:id="@+id/order_address_phone_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/order_address_name_tv"
    android:layout_toRightOf="@+id/order_address_name_tv"
    android:layout_toLeftOf="@+id/order_address_arrow_iv"
    android:text=""
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:textColor="@color/text_nomal"
    android:textSize="@dimen/y28"/>
<TextView
    android:id="@+id/order_address_addr_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/order_address_name_tv"
    android:text="收货地址"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    android:textColor="@color/text_nomal"
    android:ellipsize="end"
    android:layout_alignParentLeft="true"
    android:layout_toLeftOf="@+id/order_address_arrow_iv"
    android:textSize="@dimen/y28"/>


<ImageView
    android:id="@+id/order_address_arrow_iv"
    android:layout_width="@dimen/icon_pxsize_x"
    android:layout_height="@dimen/icon_pxsize_y"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:src="@drawable/icon_right_arrow_gray"/>
</RelativeLayout>