<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows = "true"
    android:orientation="vertical"
    android:background="#eeeeee">

    <com.thlh.jhmjmw.view.HeaderNormal
        android:id="@+id/recharge_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:title="账户充值"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/shap_radius_winelight_r10"
        android:layout_marginTop="@dimen/y10"
        android:layout_marginBottom="@dimen/y10"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10">
        <ImageView
            android:id="@+id/rechargeqr_location_iv"
            android:layout_width="@dimen/icon_pxsize_x"
            android:layout_height="@dimen/icon_pxsize_y"
            android:src="@drawable/icon_location_white"
            android:layout_marginLeft="@dimen/x20"/>
        <TextView
            android:id="@+id/rechargeqr_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text=""
            android:layout_marginLeft="@dimen/x20"
            android:textSize="@dimen/y28"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/rechargeqr_qr_iv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/recharge_qr_default"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请您长按屏幕中二维码\n进行绑定充值"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:textSize="@dimen/text_size_normal"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.3"
        android:textColor="@color/text_nomal" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/recharge_qr_logo"
        android:layout_gravity="center_horizontal"
        android:id="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="客户资金，江苏银行全程监管\n消费更安全"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/text_size_little"
        android:lineSpacingMultiplier="1.3"
        android:textColor="@color/text_nomal" />
</LinearLayout>
