<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows = "true"
    android:background="@color/white">
    <com.thlh.jhmjmw.view.HeaderNormal
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        custom:title="消息中心"/>
    <LinearLayout
        style="@style/divide_linealayout_horizontal">
        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginLeft="@dimen/normal_margin_side_x"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_wifi_black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="我的智能设备"
            android:textSize="@dimen/text_size_little"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/normal_margin_text_toiv"/>
    </LinearLayout>
    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:groupIndicator="@null"
        android:choiceMode="singleChoice"
        android:id="@+id/myinfo_explv" />
</LinearLayout>
